    <div id="canvas" style="margin-top:20px;">
        <div class="alert-holder">
          <% flash.each do |key, value| %>
            <div class="alert alert-dismissable alert-<%=key%>">
              <button  class="close" data-dismiss="alert" type="button"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <%=raw(value)%>
            </div>
          <%end%>
        </div>
        <%if post = session_obj.work_in_progress%>
          <%if !(post == @post)%><!-- i.e. they are already posting it -->
            <div class="alert alert-dismissable alert-info">
              <button  class="close" data-dismiss="alert" type="button"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <%=image_tag post.image.url(:medium), :class=>"cute"%>
              <%=link_to "Post this image", edit_post_path(post)%> &nbsp; 
              <%=link_to "Continue this image", doodle_path(post)%> &nbsp; 
              <%= link_to "Delete", post_path(post), :method => :delete, :confirm=>"Are you sure you want to delete this work in progress?" %>
            </div>
          
            <%if !logged_in?%>
              <div class="alert alert-dismissable alert-warning">
                <button  class="close" data-dismiss="alert" type="button"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <strong>Don't lose your work!</strong> &nbsp; <%=link_to "Log in", login_path, :class=>"loginable"%> or <%=link_to "Create an Account", new_user_path%> to transfer your artwork to your account.
              </div>
            <%end%>
          <%end%>
        <%end%>
         
        <div id="mobileNav" class="">
          <div class="wrapper">
            <nav class="main-nav mobileNav">
              <%= render :partial=>"common/menu"%>
            </nav>
          </div>
        </div>
        <div id="mobileMenuLink"><a>Menu</a></div>
        
        <header id="header" class="clear">
          <div id="upper-logo">
            <h1 class="logo" data-content-field="site-title">
              <a href="<%=doodle_path%>" class="<%=set_canvas_size_class%>"><img src="/images/logo2.jpg" alt="<%=Settings.host%>"></a>
            </h1>
          </div>
          <div class="site-tag-line"></div>

          <div id="lower-logo">
            <h1 class="logo" data-content-field="site-title" data-shrink-original-size="42" style="letter-spacing: 0.0238095em;">
              <a href="<%=doodle_path%>" class="<%=set_canvas_size_class%>"><img src="/images/logo2.jpg" alt="<%=Settings.host%>"></a>
            </h1>
          </div>

          <div id="topNav" style="margin-top:20px">
            <nav class="main-nav" data-content-field="navigation">
            <%= render :partial=>"common/menu"%>
            <div class="page-divider"></div>
            </nav>
          </div>
        </header>

        <div class="page-divider top-divider"></div>

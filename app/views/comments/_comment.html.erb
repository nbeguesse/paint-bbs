              <div class="comment">
                <figure>
                  <%=render :partial=>"posts/avatar", :locals=>{:user=>comment.user}%>
                  <figcaption><%=comment.creator%></figcaption>
                
                </figure>
                <%=simple_format(comment.message)%>
                <div class="small">
                  <time class="published dt-published" datetime="<%=comment.created_at.strftime("%Y-%m-%d")%>" itemprop="datePublished" pubdate=""><%=distance_of_time_in_words Time.now, comment.created_at%> ago</time>

                  <%if logged_in? && current_user.may_edit_comment?(comment)%>    
                    <%=link_to "Edit", edit_comment_path(comment)%>
                    &bullet; <%= link_to "Delete", comment_path(comment), :method => :delete, :confirm=>"Are you sure you want to delete this comment?" %>

                  <%end%>
                </div>
              </div>